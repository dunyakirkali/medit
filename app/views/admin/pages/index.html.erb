<h2>Pages</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Block count</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.blocks.count %></td>
        <td><%= link_to 'Show', [:admin, page] %></td>
        <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
        <td><%= link_to 'Destroy', [:admin, page], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

